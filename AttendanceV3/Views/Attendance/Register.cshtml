@{
    ViewData["Title"] = "Register Attendance";
}

<h2>Register</h2>

<form asp-action="Register" method="post">
    <input type="hidden" name="sessionId" value="@ViewBag.SessionId" />
    <input type="hidden" name="deviceId" value="@ViewBag.DeviceId" />

    <input name="studentName" placeholder="Your Name" required />
    <br /><br />
    <button type="submit">Submit</button>
</form>

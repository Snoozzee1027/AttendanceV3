@model AttendanceV3.Models.ChangeCredentialsViewModel

@{
    ViewData["Title"] = "Change Credentials";
}

<header class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <span class="me-3">Logged in as: @User.Identity.Name</span>
        <form asp-action="Logout" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
        </form>
    </div>

    <div class="card p-3" style="min-width: 300px;">
        <h5 class="mb-3">Change Credentials</h5>
        <form asp-action="ChangeCredentials" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-2">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control form-control-sm" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="NewPassword" class="form-label">New Password</label>
                <input asp-for="NewPassword" class="form-control form-control-sm" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control form-control-sm" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success btn-sm">Update</button>
        </form>
    </div>
</header>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
    
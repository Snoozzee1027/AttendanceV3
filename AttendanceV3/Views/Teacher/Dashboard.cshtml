@model IEnumerable<AttendanceV3.Models.AttendanceSessions>
@{
    ViewData["Title"] = "Teacher Dashboard";
}

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">AttendanceV3</a>

        <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav mb-2 mb-lg-0 align-items-center">
                <li class="nav-item">
                    <span class="nav-link">@User.Identity.Name</span>
                </li>
                <li class="nav-item">
                    <a asp-action="ChangeCredentials" class="btn btn-sm btn-warning text-white ms-2">
                        Change Credentials
                    </a>
                </li>
                <li class="nav-item ms-2">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Logout</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</nav>

<h2>Teacher Dashboard</h2>

<!-- START ATTENDANCE FORM -->
<form asp-action="CreateSession" method="post" class="mb-4">
    @Html.AntiForgeryToken()
    <input name="subject" placeholder="Subject" required />
    <input name="classSection" placeholder="Class Section" required />
    <input name="yearLevel" placeholder="Year Level" required />
    <button type="submit" class="btn btn-primary">Start Attendance</button>

    <!-- UNENROLL BUTTON -->
    <a asp-action="UnenrollStudent" class="btn btn-warning ms-3">Unenroll Students</a>
</form>

<hr />

@if (!Model.Any())
{
    <p>No attendance sessions yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Subject</th>
                <th>Class</th>
                <th>Year</th>
                <th>Code</th>
                <th>Started</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Subject</td>
                    <td>@s.ClassSection</td>
                    <td>@s.YearLevel</td>
                    <td>@s.SessionCode</td>
                    <td>@s.StartTime.ToLocalTime()</td>
                    <td>
                        @if (s.EndTime == null)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Closed</span>
                        }
                    </td>
                    <td>
                        @if (s.EndTime == null)
                        {
                            <a asp-action="ScanQRCode" asp-route-id="@s.Id" class="btn btn-sm btn-primary">Open QR</a>

                            <form asp-action="CloseSession" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@s.Id" />
                                <button class="btn btn-sm btn-danger">Stop QR</button>
                            </form>
                        }

                        <a asp-action="ExportCsv" asp-route-id="@s.Id" class="btn btn-sm btn-outline-success">Export CSV</a>

                        <a asp-action="ViewStudents" asp-route-id="@s.Id" class="btn btn-sm btn-info">View Students</a>

                        <!-- DELETE BUTTON -->
                        <form asp-action="DeleteSession" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this session?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@s.Id" />
                            <button type="submit" class="btn btn-sm btn-warning">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
